// VS Code settings template for Go1 Challenge
// Copy to .vscode/settings.json and update Isaac Lab paths
{
    "files.associations": {
        "*.tpp": "cpp",
        "*.kit": "toml",
        "*.rst": "restructuredtext"
    },
    "editor.rulers": [
        120
    ],
    // Configuration for spelling checker
    "spellright.language": [
        "en_CA"
    ],
    "spellright.documentTypes": [
        "markdown",
        "latex",
        "plaintext",
        "cpp",
        "asciidoc",
        // "python",
        "restructuredtext"
    ],
    "spellright.spellContextByClass": {
        "latex": "body",
        "markdown": "body",
        "cpp": "comments",
        "python": "strings"
    },
    // This enables python language server. Seems to work slightly better than jedi:
    "python.languageServer": "Pylance",
    // Use docstring generator
    "autoDocstring.docstringFormat": "google",
    "autoDocstring.guessTypes": true,
    // Language specific settings
    "[python]": {
        "editor.tabSize": 4
    },
    "[restructuredtext]": {
        "editor.tabSize": 2
    },
    // Python extra paths - UPDATE THESE PATHS TO YOUR ISAAC LAB INSTALLATION
    "python.analysis.extraPaths": [
        // Isaac Lab - Replace with your actual Isaac Lab installation path
        "/path/to/IsaacLab/source/isaaclab",
        "/path/to/IsaacLab/source/isaaclab_assets",
        "/path/to/IsaacLab/source/isaaclab_mimic",
        "/path/to/IsaacLab/source/isaaclab_rl",
        "/path/to/IsaacLab/source/isaaclab_tasks"
    ]
}